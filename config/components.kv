# This file contains various personalized widgets.
# You have to load the colors.kv file in your python code with Builder.load_file()


<ClearButton@Button+BgDark>:
    font_size: "20sp"
    background_color: 0,0,0,0
    color: app.act_font_l if self.state == 'normal' else app.act_font_d


<RoundedButtonLined@Button>:
    canvas.before:
        Color:
            rgba: app.button_col_norm if self.state == 'normal' else app.button_col_down
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
    color: app.act_font_l if self.state == 'normal' else app.act_font_d
    background_color: 0,0,0,0

<HelpButton@Button>:
    canvas.before:
        Color:
            rgba: app.button_col_down if self.state == 'normal' else app.button_col_norm
        Line:
            width: 2
            ellipse: (self.x, self.y, self.width, self.height)
    markup: True
    text: "[b]?[/b]"
    background_color: 0,0,0,0
    color: app.act_font_l if self.state == 'normal' else app.act_font_d

<BoxBgDark@BoxLayout+BgDark>:

<BoxBgLight@BoxLayout+BgLight>:

<BoxBgSlight@BoxLayout+BgSlight>:

<BoxTest@BoxLayout+BgTest>:
