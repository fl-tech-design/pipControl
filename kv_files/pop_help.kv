<InfoPopup>:
    title: app.act_lab_txt["help"][app.act_lang]
    background_color: 1,1,1,0.8
    size_hint: None, None
    size: 500, 200
    BoxBgDark:
        orientation: 'vertical'
        padding: 10
        Label:
            text: root.popup_message
            font_size: '16sp'
        BoxBgDark:
            spacing: 20
            RoundedButtonLined:
                id: but_yes
                text: 'OK'
                size_hint_y: None
                height: 40
                on_release: root.but_yes_func()
            RoundedButtonLined:
                id: but_no
                text: 'cancel'
                size_hint_y: None
                height: 40
                on_release: root.dismiss()
