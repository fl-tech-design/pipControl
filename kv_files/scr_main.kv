<ScrMain>:
    # Box of the full app
    BoxBgDark:
        orientation: "vertical"
        padding: (3,)
        BoxBgLight:
            orientation: "vertical"
            padding:(4,)
            spacing:4

# box of the title field
            BoxBgDark:
                height: "32sp"
                size_hint: (1, None)
                BoxBgSlight:
                    padding: (2,)
                    BoxBgDark:
                        padding: (2,)
                        BoxBgLight:
                            padding: (2,)
                            BoxBgDark:
                                Label:
                                    text: "pip Control Center"
                                    font_size: "18sp"
                                    color: 1,1,1,0.5
# Box of the middle.
            BoxBgSlight:
                name: "box_middle"
                padding: (2,)
                BoxBgDark:
                    padding: (4,)
                    spacing: 4

# the left side of the middle box
                    BoxBgSlight:
                        orientation: "vertical"
                        width: "240sp"
                        size_hint: (None, 1)
                        padding: (2,)
                        spacing: 4
                        BoxBgDark:
                            id: "box_actions"
                            height: "40sp"
                            size_hint: (1, None)
                            BoxBgSlight:
                                BoxBgDark:
                                    padding: (2,)
                                    BoxBgLight:
                                        padding: (2,)
                                        BoxBgDark:
                                            Label:
                                                id: lab_actions_title
                                                color: 1,1,1,0.5
                                                font_size: "20sp"
                        BoxBgDark:
                            height: "30sp"
                            size_hint:(1,None)
                            LabDark:
                                id: lab_list_installed
                        GridActions:
                            BoxBgDark:
                                padding: (4,12,0,12)
                                RoundedButtonLined:
                                    id: but_show_inst_packs
                                    on_release: root.but_package_func("installed")

                            BoxBgDark:
                                width: "60sp"
                                size_hint: (None, 1)
                                padding: (15,)
                                HelpButton:
                                    on_release: app.show_popup(app.act_lab_txt["help_2"][app.act_lang])
                        BoxBgDark:
                            height: "30sp"
                            size_hint:(1,None)
                            LabDark:
                                id: lab_list_outdated
                        GridActions:
                            BoxBgDark:
                                padding: (4,12,0,12)
                                RoundedButtonLined:
                                    id: but_show_outd_packs
                                    on_release: root.but_package_func("outdated")
                            BoxBgDark:
                                width: "60sp"
                                size_hint: (None, 1)
                                padding: (15,)
                                HelpButton:
                                    on_release: app.show_popup(app.act_lab_txt["help_1"][app.act_lang])
                        BoxBgDark:
                            orientation: "vertical"
                            BoxBgDark:
                            BoxBgDark:
                            Logo:
                                height: "80sp"
                                size_hint_y: None

# the right side of middle box
                    BoxBgSlight:
                        orientation: "vertical"
                        padding: (2,)
                        BoxBgSlight:
                            height: "40sp"
                            size_hint: (1, None)
                            padding: 0,0,0,3
                            BoxBgDark:
                                padding: (2,)
                                BoxBgLight:
                                    padding: (2,)
                                    BoxBgDark:
                                        orientation: "vertical"
                                        BoxBgSlight:
                                            BoxBgDark:
                                                padding: 5,0,0,0
                                                Label:
                                                    id: lab_output_title
                                                    color: 1,1,1,0.5
                                                    font_size: "20sp"
                                                    text_size: self.width, None
                                                    halign: 'left'
                                                    valign: 'middle'



                        BoxBgDark:
                            orientation: "vertical"
                            padding: (2,)
                            BoxBgDark:
                                id: box_scr_view
                                ScrollView:
                                    id: scroll_view
                                    do_scroll_y: True
                                    size_hint: (1, 1)
                                    Table:
                                        size_hint_y: None
                                        text_size: self.width, None
                                        padding: 10, 10
                                        markup: True
# Bottom Box
            BoxBgDark:
                id: box_bottom
                padding: (2,)
                height: "30sp"
                size_hint: (1, None)
                BoxBgDark:
                BoxBgDark:
                BoxBgDark:
                    width: "150sp"
                    size_hint: (None, 1)
                    padding: (2,)
                    RoundedButtonLined:
                        id: but_sett
                        on_release: app.change_screen("left", "scr_sett")

