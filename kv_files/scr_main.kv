<ScrMain>:
    name: "scr_main"
    # Box of the full app
    BoxBgDark:
        orientation: "vertical"
        padding: (3,)
        BoxBgLight:
            orientation: "vertical"
            padding:(4,)
            spacing:4

# box of the title field
            BoxBgDark:
                height: "50sp"
                size_hint: (1, None)
                BoxBgSlight:
                    padding: (2,)
                    BoxBgDark:
                        padding: (2,)
                        BoxBgLight:
                            padding: (2,)
                            BoxBgDark:
                                Label:
                                    id: title_win
                                    text: "pip Control Center"
                                    font_name: "fonts/ChunkFive-Regular.otf"
                                    font_size: "18sp"
                                    color: 1,1,1,0.5
# Box of the middle.
            BoxBgSlight:
                name: "box_middle"
                padding: (2,)
                BoxBgDark:
                    padding: (4,)
                    spacing: 4

# the left side of the middle box
                    BoxBgSlight:
                        orientation: "vertical"
                        width: "240sp"
                        size_hint: (None, 1)
                        padding: (2,)
                        spacing: 4
# start of the title box
                        BoxBgDark:
                            id: "box_actions"
                            height: "40sp"
                            size_hint: (1, None)
                            BoxBgSlight:
                                BoxBgDark:
                                    padding: (2,)
                                    BoxBgLight:
                                        padding: (2,)
                                        BoxBgDark:
                                            Label:
                                                id: lab_actions_title
                                                color: 1,1,1,0.5
                                                font_size: "20sp"
# Box installed pips.
                        BoxBgDark:
                            height: "30sp"
                            size_hint:(1,None)
                            LabDark:
                                id: lab_list_installed
                        GridActions:
                            BoxBgDark:
                                padding: (4,12,0,12)
                                RoundedButtonLined:
                                    id: but_show_inst_packs
                                    on_release: root.but_pips_func("")
                            BoxBgDark:
                                width: "60sp"
                                size_hint: (None, 1)
                                padding: (15,)
                                ButtonHelp:
                                    on_release: app.show_info_popup(root.act_lab_txt["help_2"][root.act_lang])
# Box outdated pips
                        BoxBgDark:
                            height: "30sp"
                            size_hint:(1,None)
                            LabDark:
                                id: lab_list_outdated
                        GridActions:
                            BoxBgDark:
                                padding: (4,12,0,12)
                                RoundedButtonLined:
                                    id: but_show_outd_packs
                                    on_release: root.but_pips_func("--outdated")
                            BoxBgDark:
                                width: "60sp"
                                size_hint: (None, 1)
                                padding: (15,)
                                ButtonHelp:
                                    on_release: app.show_info_popup(root.act_lab_txt["help_1"][root.act_lang])
                        BoxBgDark:
                            orientation: "vertical"
                            BoxBgDark:
                            BoxBgDark:
                            Logo:

# the right side of middle box
                    BoxBgSlight:
                        orientation: "vertical"
                        padding: (2,)
                        BoxBgSlight:
                            height: "40sp"
                            size_hint: (1, None)
                            padding: 0,0,0,3
                            BoxBgDark:
                                padding: (2,)
                                BoxBgLight:
                                    padding: (2,)
                                    BoxBgDark:
                                        orientation: "vertical"
                                        BoxBgSlight:
                                            BoxBgDark:
                                                padding: 5,0,0,0
                                                Label:
                                                    id: lab_output_title
                                                    font_name: "fonts/Jura-Regular.otf"
                                                    color: 1,1,1,0.5
                                                    font_size: "23sp"
                                                    text_size: self.width, None
                                                    halign: 'left'
                                                    valign: 'middle'


# Box with the output field of the terminal
                        BoxBgDark:
                            orientation: "vertical"
                            padding: (2,)
                            BoxBgDark:
                                id: box_scroll_view
                                ScrollView:
                                    do_scroll_x: False
                                    do_scroll_y: True

                                    LabelLinked:
                                        id: lab_output
                                        size_hint_y: None
                                        height: self.texture_size[1]
                                        text_size: self.width, None
                                        padding: 10, 10
                                        markup: True

# Bottom Box
            BoxBgDark:
                id: box_bottom
                padding: (2,)
                height: "30sp"
                size_hint: (1, None)
                BoxBgDark:
                BoxBgDark:
                BoxBgDark:
                    width: "150sp"
                    size_hint: (None, 1)
                    padding: (2,)
                    RoundedButtonLined:
                        id: but_sett
                        on_release: app.change_screen("left", "scr_sett")

